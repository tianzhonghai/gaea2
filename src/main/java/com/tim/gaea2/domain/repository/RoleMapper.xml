<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tim.gaea2.domain.repository.RoleMapper">
    <resultMap id="rolePermissionWithUrlPO" type="com.tim.gaea2.domain.entity.RolePermissionWithUrlPO">
        <result column="role_id" jdbcType="BIGINT" property="roleId" />
        <result column="permission_id" jdbcType="BIGINT" property="permissionId" />
        <result column="permission_sign" jdbcType="VARCHAR" property="permissionSign" />
    </resultMap>
    <sql id="Base_Column_List">
        id, role_name, role_sign, description
    </sql>
    <select id="selectAllRolePermissions" parameterType="java.util.List" resultMap="rolePermissionWithUrlPO">
        select rp.role_id,rp.permission_id,p.permission_sign FROM `role_permission` AS rp JOIN `permission` AS p ON rp.permission_id = p.id
    </select>
</mapper>